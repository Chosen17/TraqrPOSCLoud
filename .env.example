# MySQL: create database 'traqrcloud', then set your user and password here
DATABASE_URL=mysql://user:password@localhost:3306/traqrcloud

RUST_LOG=info

# Optional: serve static files from a different folder (default: web/public)
# WEB_ROOT=web/public

# Optional: directory for uploaded files (avatars, blog images). Served at /uploads/. Default: uploads (relative to process cwd). For production, use an absolute path so upload and serve use the same directory.
# UPLOAD_DIR=uploads

# On the server: set this to your public API base URL (no trailing slash). POS uses it for all sync/device endpoints.
# CLOUD_API_URL=https://cloud.traqr.co.uk/api

# On the server: set a secret so only you can create activation codes (scripts and API must send X-Admin-Key).
# If you leave this unset, anyone who can reach the API can create codes.
# ADMIN_API_KEY=your-long-random-secret

# Delivery integrations: base64-encoded 32-byte key for AES-256-GCM credential encryption.
# Generate with: openssl rand -base64 32
# DELIVERY_CRED_ENC_KEY=
